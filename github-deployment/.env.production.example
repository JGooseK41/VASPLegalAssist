# Production Environment Variables Example
# Copy this file to .env.production and update with your production values

# Frontend API URL - Update this with your production backend URL
REACT_APP_API_URL=https://api.yourdomain.com/api

# Backend Server Configuration
PORT=5000
NODE_ENV=production

# Database URL - Update with your production database
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# JWT Secret - Use a strong, unique secret in production
JWT_SECRET=your-production-jwt-secret-here

# Encryption Key - Use a strong, unique key in production
ENCRYPTION_KEY=your-production-encryption-key-here

# Client URL - Update with your production frontend URL
CLIENT_URL=https://yourdomain.com

# Optional: Email configuration if needed
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your-email-password

# Optional: File storage limits
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=100